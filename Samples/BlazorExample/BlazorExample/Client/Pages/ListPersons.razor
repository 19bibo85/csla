@page "/ListPersons"
@using BlazorExample.Shared

<h1>List of People</h1>

<p style="background-color:red;color:white">@vm.ViewModelErrorText</p>

@if (vm.Model == null)
{
  <p>Loading Person...</p>
}
else
{
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in vm.Model)
      {
        <tr>
          <td>@item.Name</td>
          <td><a href="editperson/@item.Id">Edit</a></td>
        </tr>
      }
    </tbody>
  </table>
}

@code {
  ViewModels.PersonListViewModel vm;

  protected override async Task OnInitializedAsync()
  {
    vm = new ViewModels.PersonListViewModel();
    await vm.RefreshAsync();
  }
}
