@page "/resources"
@inject Csla.Blazor.ViewModel<ProjectTracker.Library.ResourceList> vm

<h1>Resources</h1>

<p class="text-danger">@vm.ViewModelErrorText</p>

@if (vm.Model == null)
{
  <p>Loading...</p>
}
else
{
  <p>
    <a href="resourceedit">Add resource</a>
  </p>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in vm.Model)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.Name</td>
          <td><a href="resourceedit/@item.Id">Edit</a> | Delete</td>
        </tr>
      }
    </tbody>
  </table>
}

@code {
  protected override async Task OnInitializedAsync()
  {
    await vm.RefreshAsync();
  }
}
